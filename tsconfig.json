{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "DOM"
    ],
    "types": [
      "jest",
      "node",
    ],
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
}